<h1>Log In</h1>

<div>
  <%= flash[:alert] %>
</div>

<div class="container">
<%= form_tag sessions_path, :method => :post, :html => { :class =>
'form-horizontal' } do %>
<div class="form-group">
  <div class="col-md-4">
    <%= text_field_tag :email, nil, placeholder:'Email', class: "form-control input-md" %>
    <span class="help-block"> </span>
  </div>
</div>

<div class="form-group">
  <div class="col-md-4">
    <%= password_field_tag :password, nil, placeholder:'Password', class: "form-control input-md" %>
    <span class="help-block"> </span>
  </div>
</div>
<div class="form-group">
  <div class="col-md-4">
  <%= submit_tag 'Login', id: 'singlebutton', name: 'singlebutton', class: 'btn btn-primary' %>
  <%= link_to 'Forgot Password?', new_password_reset_path %>
  </div>
</div>
<% end %>



</div>

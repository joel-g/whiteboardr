<div>
  <%= flash[:alert] %>
</div>

<div class='login-jumbo'>
<div class="container">
<div class="jumbotron">
  <div class="jumbotron-content">
    <h1>Welcome to Whiteboardr!</h1>
    <p class="jumbotron-lg-only">Join our community and start practicing!</p>
    <%= form_tag sessions_path, :method => :post, :html => {class: 'signin-block'} do %>
      <div class="form-group login-group">
        <label for="email">Email:</label>
        <%= text_field_tag :email, nil, placeholder:'Email', class: "form-control" %>
      </div>
      <div class="form-group login-group">
        <label for="password">Password:</label>
        <%= password_field_tag :password, nil, placeholder:'Password', class: "form-control" %>
      </div>
      <%= submit_tag 'Sign In', class: 'btn btn-primary btn-large' %>
    <% end %>
    <%= link_to 'Forgot Password?', new_password_reset_path %>
  </div>
</div>
</div>
</div>


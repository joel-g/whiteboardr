<h3>Create a Challenge</h3>
  <div class='errors'>
    <% if defined?(@challenge.errors) %>
      <% @challenge.errors.full_messages.each do |message| %>
      <div>
        <%= message %>
      </div>
      <% end %>
    <% end %>
  </div>

<div class='form-container'>
  <%= form_for @challenge do |f| %>
    <p>
      <%= f.hidden_field :user_id, :value => current_user.id %>
    </p>
    <p>
      <%= f.label :title %>*<br>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :body %>*<br>
      <%= f.text_area :body %>
    </p>
    <p>
      <%= f.label :notes %><br>
      <%= f.text_area :notes %>
    </p>
    <p>
      <%= f.label :difficulty %>*<br>
      <%= f.select :difficulty, ['Easy', 'Medium', 'Hard'] %>
    </p>
    <p>
      <%= f.fields_for @tag do |ff| %>
        <%= ff.label 'Tags:' %><br />Separate with commas and pluralize when appropriate, e.g. <i>algorithms, strings, arrays</i><br />
        <%= ff.text_field :name %>
      <% end %>
    </p>
    <p>
      <%= f.submit %>
    </p>
  <% end %>
</div>

<div class='challenges-container'>
  <ul class='challenges-list'>
    <% @challenges.each do |challenge| %>
      <li>
        <%= link_to challenge.title_and_difficulty, challenge_path(challenge) %>
        <% if challenge.tags.length > 0 %> <br />(Tags:
          <% challenge.tags.each do |t| %>
          <%= t.name %>
          <% end %>)
        <% end %>
      </li>
    <% end %>
  </ul>
</div>

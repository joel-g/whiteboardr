<h1>Start an Interview</h1>

<div class='errors'>
  <% if @interview.errors.any? %>
    <% @interview.errors.full_messages.each do |error| %>
      <%= error %>
    <% end %>
  <% end %>
</div>
  
<%= form_for @interview do |f| %>
  <%= f.hidden_field :interviewer_id, :value => 1 %>
  <%= f.label "Applicant's username" %>
  <%= f.text_field :applicant_id %>
  <%= f.label :challenge %>
  <%= f.collection_select :challenge_id, @challenges, :id, :title_and_difficulty, :prompt => "Select challenge" %>
  <%= f.submit "Start Interview" %>
<% end %>

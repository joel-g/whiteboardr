<% if logged_in? %>
  <div class='buttons'>
    <%= link_to 'Create a Challenge', new_challenge_path %>
  </div>
<% else %>
  <h4> <%= link_to "Log in", login_path %> to create challenges, start interviews or review interviews.</h4>
<% end %>
<% if logged_in? %>
  <% if flash[:alert] %>
    <div class='error'>
      <%= flash[:alert] %>
    </div>
  <% end %>
  <%= form_tag 'i' do %>
    <%= text_field_tag :token %>
    <%= submit_tag "Join Interview" %>
  <% end %>
<% end %>
<div class='interviews-container'>
  <ul class='interviews-list'>
    <% @interviews.each do |interview| %>
      <li>
        <% if logged_in? %>
          <%= link_to "#{interview.applicant.username}'s interview, ID: #{interview.id}", interview %>
        <% else %>
          <%= interview.applicant.username %>'s interview, ID: <%= interview.id %>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
